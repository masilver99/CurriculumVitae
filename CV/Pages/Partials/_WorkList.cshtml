@using CV.Models
@model List<WorkItem>

@foreach (var workItem in Model)
{
    <div class="card my-2">
        <div class="card-header">
            <div class="d-flex flex-wrap justify-content-between align-items-center item-title">
                <div class="p-2 flex-grow-1">
                    <div class="companyName">
                        <img class="workImage" src="~/img/@workItem.Image" />
                        @workItem.CompanyName
                    </div>
                    <div class="workTitle">
                        <i class="far fa-address-card"></i>
                        @workItem.Position
                    </div>
                </div>
                <div class="p-1">
                    <div>
                        <i class="far fa-calendar-alt"></i> @workItem.Dates
                    </div>
                    <div>
                        <i class="fas fa-map-marked-alt"></i>
                        @workItem.Location
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <ul class="fa-ul listItem">
                @foreach (var item in workItem.BulletPoints)
                {
                    <li>
                        @item
                    </li>
                }
            </ul>
        </div>
    </div>
}
